pipeline {
    agent any 
    
    parameters{
    string (name:'PERSON',defaultValue:'Mr. Rahul Mishra',description:'He is most perfect men')
    text(name:'BIO',defaultValue:'sdfs',description:'Mst')    
    choice(name:'CHOICE',choices:['One','Two','Three'],description:'U can choice any ones')
    password(name:'PASSWORD', defaultValue:'SECRET',description:'Kon khayega murgi')
    }
   
    stages {
        stage('Example Information') {
        input{
        message"Select to continue Build"
        }
            steps {
                echo "Hello ${params.PERSON}" 
                echo "Biography: ${params.BIO}"                                
                echo "Choice ${params.CHOICE}"
                echo "Password ${params.PASSWORD}"
                echo 'Build is Done'
            }
        }
          stage('Stage 2 : Deployed') {
            input{
                message "Select to continue Deployment"
                }
            steps {
                echo 'Deployement is Done' 
            }
           steps {
           retry(10){
                echo 'Time Gya' 
            } 
            
      timeout(time: 10, unit: 'SECONDS'){ 
      echo "Time Gaya"
  }
  }
            
        }
          stage('Stage 3 : Test') {
          input{
                message "Select to continue Testing"
                }
            steps {
                echo 'Testing is Done' 
            }
         }
        }
    
    post{
        always{
                 echo"This will always run"
    }
        success {
          
                 echo'This will run only if successful'
    }
        failure{
                echo 'This will run only if failed' 
      }  
        unstable{
                echo 'This will run only if the run was marked as unstable'
       } 
        changed{
                echo 'this will run only if the state of the Pipline has changed'
                echo 'For example, if the pipline was previously failing but is now successful'
       } 
    
    }
}
